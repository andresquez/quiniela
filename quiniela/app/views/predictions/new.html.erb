<section class="section">
  <div class="container">
    <div class="box">
      <div class="control has-text-left mt-4">
        <%= link_to all_matches_path, class: "button is-danger" do %>
          <span class="icon">
            <i class="fas fa-arrow-left"></i>
          </span>
          <span>Back</span>
        <% end %>
      </div>
      <h1 class="title">New Prediction</h1>
      <%= form_with model: @prediction, class: "form" do |form| %>
        <div class="field">
          <%= form.label :player_id, class: "label" %>
          <div class="control">
            <%= form.number_field :player_id, class: "input", placeholder: "Player ID" %>
          </div>
        </div>

        <div class="field">
          <%= form.label :match_id, class: "label" %>
          <div class="control">
            <%= form.number_field :match_id, class: "input", placeholder: "Match ID" %>
          </div>
        </div>

        <div class="field">
          <%= form.label :goals1, class: "label" %>
          <div class="control">
            <%= form.number_field :goals1, class: "input", placeholder: "Goals Team 1" %>
          </div>
        </div>

        <div class="field">
          <%= form.label :goals2, class: "label" %>
          <div class="control">
            <%= form.number_field :goals2, class: "input", placeholder: "Goals Team 2" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= form.submit "Submit", class: "button is-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  </section>
