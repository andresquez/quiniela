<h1>Log In</h1>

<% if flash[:error] %>
  <div class="error">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with model: @player, url: login_players_path do |form| %>
  <div>
    <%= form.label :username %> <br>
    <%= form.text_field :username %> 
  </div>

  <div>
    <%= form.label :password %> <br>
    <%= form.password_field :password %>
  </div>
  
  <br>
    <%= form.submit "Log In"%>
  </div>

<% end %>
