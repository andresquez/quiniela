<section class="section">
  <div class="container is-fluid">
    <div class="notification is-success">
      <%= notice %>
    </div>

    <div class="columns is-multiline">
      <div class="column is-6">
        <div class="box play">
          <div class="card">
            <div class="card-content has-text-centered">
              <h1 class="title">Player Profile</h1>
              <p class="has-text-weight-bold">Player #<%= @player.id %></p>
              <p class="has-text-weight-bold">Username: <%= @player.username %></p>
              <p class="has-text-weight-bold">Points: <%= @player.leaderboard.points %></p>
            </div>
          </div>
          
          <div class="card">
            <div class="card-content has-text-centered">
              <h1 class="title">Account Settings</h1>
              <div class="buttons is-centered">
                <%= button_to "Edit Account", edit_player_path(@player), class: "button is-info" %>
                <%= button_to "Delete Account", @player, method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-6">
        <div class="box">
          <div class="card">
            <div class="card-content has-text-centered">
              <h1 class="title">Play</h1>
              <div class="buttons is-centered">
                <%= link_to "Matches", matches_path, class: "button is-primary" %>
                <%= link_to "Leaderboard", leaderboards_path, class: "button is-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
