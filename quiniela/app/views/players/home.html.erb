<!-- app/views/players/home.html.erb -->

<h1 class="title">Welcome <%= @player.username %></h1>

<div class="box" id="players">
  <p>Player #<%= @player.id %></p>
  <p>Username: <%= @player.username %></p>
  <p>Points: <%= @player.leaderboard.points %></p>
</div>

<div class="Actions">
  <%= link_to "Matches", matches_path, class: "button is-link" %> 
  <%= link_to "Leaderboard", leaderboards_path, class: "button is-link" %>
</div>

<div>
  <%= link_to "Edit Profile", edit_player_path(@player), class: "button is-primary" %>
  <%= link_to "Back to Players", players_path, class: "button is-info" %>
</div>
