<h1>New match</h1>

<%= form_with model: @match do |form| %>
  <div>
    <%= form.label :date_played %> <br>
    <%= form.date_field :date_played %>
  </div>

  <div>
    <%= form.label :team1_id %> <br>
    <%= form.number_field :team1_id %>
  </div>

  <div>
    <%= form.label :team2_id %> <br>
    <%= form.number_field :team2_id %>
  </div>

  <div>
    <%= form.label :goals1 %> <br>
    <%= form.number_field :goals1 %>
  </div>

  <div>
    <%= form.label :goals2 %> <br>
    <%= form.number_field :goals2 %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <% end %>

<div>
  <%= link_to "Back to matches", matches_path %>
</div>
