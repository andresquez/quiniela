<p style="color: green"><%= notice %></p>

<div class="Content">
  <h1 class="Title">Teams</h1>
  <div class="Teams">
    <% @teams.sort_by(&:id).each do |team| %>
      <%= link_to team do %>
        <div class="Team_info">
          <div class="Team_name">
            <%= "Team #" + team.id.to_s%> <br><br>
            <%= team.name%> <br>
          </div>
          <div class="logo-container">
            <% if team.logo.attached? %>
              <%= image_tag team.logo %>
            <% end %>
          </div>
          <%= render team %>
        </div>
      <% end %>
    <% end %>
  </div>  
  <%= link_to "New team", new_team_path %>
</div>
