<section class="section">
  <div class="box">
    <div class="control has-text-left mt-4">
      <%= link_to teams_path, class: "button is-danger" do %>
        <span class="icon">
          <i class="fas fa-arrow-left"></i>
        </span>
        <span>Back</span>
      <% end %>
    </div>
    <div class="container">
      <% if notice %>
        <p class="notification is-primary"><%= notice %></p>
      <% end %>
      <%= render @team %>
      <h2 class="title"><%= @team.name %></h2>
      <div class="content has-text-centered">
        <div class="columns is-centered mt-4">
          <div class="column is-6 has-text-centered">
            <% if @team.logo.attached? %>
              <%= image_tag @team.logo, class: "image is-256x256" %>
            <% end %>
          </div>
          <div class="column is-6 has-text-centered">
            <% if @team.team_photo.attached? %>
              <%= image_tag @team.team_photo, class: "image is-256x256" %>
            <% end %> 
          </div>
        </div>
      </div>

      <div class="buttons is-centered mt-4">
        <%= link_to "Edit this team", edit_team_path(@team), class: "button is-info" %>
        <%= button_to "Destroy this team", @team, method: :delete, data: { confirm: "Are you sure you want to delete this team?" }, class: "button is-danger" %>
      </div>
    </div>
  </div>
</section>
