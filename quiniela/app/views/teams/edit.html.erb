<section class="section">
  <div class="container">
    <div class="box">
      <div class="control has-text-left mt-4">
        <%= link_to teams_path, class: "button is-danger" do %>
          <span class="icon">
            <i class="fas fa-arrow-left"></i>
          </span>
          <span>Back</span>
        <% end %>
      </div>
      <h1 class="title has-text-centered">Editing team</h1>
      <div class="Edit_content">
        <%= form_with model: @team, class: "form", local: true, html: { multipart: true } do |form| %>

          <div class="field">
            <%= form.label :name, class: "label" %> 
            <div class="control">
              <%= form.text_field :name, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= form.label :logo, class: "label" %> <br>
            <div class="file is-primary has-name">
              <label class="file-label">
                <%= form.file_field :logo, class: "file-input", id: "logo-input" %>
                <span class="file-cta">
                  <span class="file-icon">
                    <i class="fas fa-upload"></i>
                  </span>
                  <span class="file-label" id="logo-label">
                    Choose a file…
                  </span>
                </span>
                <span class="file-name">
                  <%= form.object.logo.attachment ? form.object.logo.filename : "No file chosen" %>
                </span>
              </label>
            </div>
          </div>

          <div class="field">
            <%= form.label :team_photo, class: "label" %> <br>
            <div class="file is-primary has-name">
              <label class="file-label">
                <%= form.file_field :team_photo, class: "file-input", id: "team-photo-input" %>
                <span class="file-cta">
                  <span class="file-icon">
                    <i class="fas fa-upload"></i>
                  </span>
                  <span class="file-label" id="team-photo-label">
                    Choose a file…
                  </span>
                </span>
                <span class="file-name">
                  <%= form.object.team_photo.attachment ? form.object.team_photo.filename : "No file chosen" %>
                </span>
              </label>
            </div>
          </div>

          <div class="field">
            <div class="control mt-5">
              <%= form.submit "Update", class: "button is-primary" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</section>

